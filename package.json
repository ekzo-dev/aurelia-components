{
  "name": "@ekzo/aurelia-components",
  "version": "1.0.0-alpha.1",
  "main": "apps/dev-app/index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages-adapters/*"
  ],
  "scripts": {
    "lint": "yarn run eslint ./packages/**/src/**/*.ts",
    "lint:fix": "yarn run eslint --fix ./packages/**/src/**/*.ts",
    "test": "lerna run test --stream",
    "update:version": "lerna version --no-push",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "aurelia": "2.0.0-beta.1",
    "sass-loader": "^12.4.0",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@aurelia/webpack-loader": "2.0.0-beta.1",
    "@babel/core": "^7.16.12",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@commitlint/config-lerna-scopes": "^16.0.0",
    "@compodoc/compodoc": "^1.1.11",
    "@storybook/addon-a11y": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/aurelia": "github:ekzo-lab/storybook-aurelia",
    "@types/jest": "27.4.0",
    "@types/node": "^17.0.45",
    "@types/webpack": "4.41.21",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "autoprefixer": "^9.7.4",
    "babel-loader": "^8.2.3",
    "browser-sync": "^2.26.7",
    "commitizen": "^4.2.3",
    "concurrently": "^3.4.0",
    "connect-history-api-fallback": "^1.6.0",
    "copy-webpack-plugin": "^10.2.1",
    "copyfiles": "^1.2.0",
    "cssnano": "^4.1.10",
    "cypress": "^6.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "debounce": "^1.2.0",
    "del": "^5.1.0",
    "dotenv": "8.2.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "fs-extra": "^9.1.0",
    "husky": "^4.3.8",
    "jest": "26.6.3",
    "jest-cli": "^26.4.2",
    "jest-transform-stub": "^2.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "minimatch": "^3.0.4",
    "postcss-url": "^8.0.0",
    "prettier": "^2.6.0",
    "promise-polyfill": "^8.1.3",
    "requirejs": "^2.3.6",
    "sass": "^1.52.2",
    "source-map-loader": "^4.0.0",
    "storybook-addon-performance": "^0.16.1",
    "storybook-addon-pseudo-states": "^1.15.1",
    "stylelint": "^13.11.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.19.0",
    "text": "requirejs/text#latest",
    "through2": "^3.0.1",
    "ts-jest": "26.5.1",
    "ts-node": "9.1.1",
    "tslint": "6.1.3",
    "typescript": "^4.9.5",
    "vinyl-fs": "^3.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --parser typescript"
    ],
    "*.*ss": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.json": []
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        80
      ]
    }
  }
}
