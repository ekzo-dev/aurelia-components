{
  "name": "@ekzo-dev/aurelia-components",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages-adapters/*"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "homepage": "https://github.com/ekzo-dev/aurelia-components",
  "scripts": {
    "lint": "nx affected -t lint:js && nx affected -t lint:css && nx affected -t lint:html --check",
    "lint:fix": "nx affected -t lint:js --fix --quiet && nx affected -t lint:css --fix --quiet && nx affected -t lint:html --write",
    "lint:fix:force": "nx run-many -t lint:js --fix --quiet --skip-nx-cache --all && nx run-many -t lint:css --fix --quiet --no-cache && nx run-many -t lint:html --write",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "predeploy": "npm run build-storybook",
    "deploy-storybook": "gh-pages -d storybook-static",
    "publish": "lerna publish from-package",
    "prepare": "husky install",
    "update:nx": "nx migrate latest",
    "update:deps": "ncu -ws --root --dep=dev,prod,optional,peer --peer --format=group -i"
  },
  "dependencies": {
    "aurelia": "^2.0.0-beta.8",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@aurelia/webpack-loader": "^2.0.0-beta.8",
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@commitlint/config-lerna-scopes": "^18.1.0",
    "@compodoc/compodoc": "^1.1.22",
    "@storybook/addon-a11y": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/aurelia": "github:ekzo-dev/storybook-aurelia",
    "@types/jest": "27.4.0",
    "@types/node": "^18.16.3",
    "commitizen": "^4.3.0",
    "concurrently": "^3.4.0",
    "copy-webpack-plugin": "^11.0.0",
    "copyfiles": "^1.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "debounce": "^1.2.1",
    "del": "^5.1.0",
    "fs-extra": "^9.1.0",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "lerna": "^6.6.2",
    "lint-staged": "^15.0.2",
    "minimatch": "^3.0.4",
    "nx": "17.0.2",
    "path": "^0.12.7",
    "promise-polyfill": "^8.3.0",
    "requirejs": "^2.3.6",
    "sass": "^1.69.5",
    "sass-loader": "^12.4.0",
    "storybook-addon-performance": "^0.17.1",
    "storybook-addon-pseudo-states": "^1.15.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-prettier": "^4.0.2",
    "text": "requirejs/text#latest",
    "through2": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tslint": "6.1.3",
    "typescript": "^4.9.5",
    "vinyl-fs": "^4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        80
      ]
    }
  }
}
