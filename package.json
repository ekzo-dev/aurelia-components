{
  "name": "@ekzo-dev/aurelia-components",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages-adapters/*"
  ],
  "homepage": "https://github.com/ekzo-dev/aurelia-components",
  "scripts": {
    "lint": "eslint ./packages*/**/src/**/*.ts",
    "lint:fix": "eslint --fix ./packages*/**/src/**/*.ts",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "predeploy": "npm run build-storybook",
    "deploy-storybook": "gh-pages -d storybook-static",
    "publish": "lerna publish from-package"
  },
  "dependencies": {
    "aurelia": "2.0.0-beta.7",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@aurelia/webpack-loader": "2.0.0-beta.7",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@commitlint/config-lerna-scopes": "^17.4.2",
    "@compodoc/compodoc": "^1.1.11",
    "@storybook/addon-a11y": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/aurelia": "github:ekzo-dev/storybook-aurelia",
    "@types/jest": "27.4.0",
    "@types/node": "^18.16.3",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "commitizen": "^4.2.3",
    "concurrently": "^3.4.0",
    "copy-webpack-plugin": "^11.0.0",
    "copyfiles": "^1.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "debounce": "^1.2.0",
    "del": "^5.1.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "fs-extra": "^9.1.0",
    "gh-pages": "^5.0.0",
    "husky": "^4.3.8",
    "jest": "26.6.3",
    "jest-cli": "^26.4.2",
    "jest-transform-stub": "^2.0.0",
    "lerna": "^6.6.1",
    "lint-staged": "^10.5.4",
    "minimatch": "^3.0.4",
    "path": "^0.12.7",
    "prettier": "^2.6.0",
    "promise-polyfill": "^8.1.3",
    "requirejs": "^2.3.6",
    "sass": "^1.52.2",
    "sass-loader": "^12.4.0",
    "storybook-addon-performance": "^0.16.1",
    "storybook-addon-pseudo-states": "^1.15.1",
    "stylelint": "^13.11.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.19.0",
    "text": "requirejs/text#latest",
    "through2": "^3.0.1",
    "ts-jest": "26.5.1",
    "ts-node": "^10.9.1",
    "tslint": "6.1.3",
    "typescript": "^4.9.5",
    "vinyl-fs": "^3.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --parser typescript"
    ],
    "*.*ss": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.json": []
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        80
      ]
    }
  }
}
