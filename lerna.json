{
  "npmClient": "npm",
  "packages": ["packages/*", "packages-adapters/*"],
  "version": "independent",
  "useWorkspaces": true,
  "useNx": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish release",
      "ignoreChanges": ["**/stories/**", "**/tests/**", "**/*.md"],
      "allowBranch": "main"
    },
    "version": {
      "ignoreChanges": ["**/stories/**", "**/tests/**", "**/*.md"],
      "allowBranch": ["main", "release/*", "develop"]
    }
  }
}
