{
  "compilerOptions" : {
    "module" : "esnext",
    "moduleResolution" : "node",
    "esModuleInterop" : true,
    "target" : "es2020",
    "lib" : [
      "es2019",
      "dom"
    ],
    "forceConsistentCasingInFileNames" : true,
    "experimentalDecorators" : true,
    "emitDecoratorMetadata" : true,
    "noEmitHelpers" : true,
    "importHelpers" : true,
    "skipLibCheck" : true,
    "sourceMap" : true,
    "resolveJsonModule" : true
  },
  "exclude" : [
    ".vscode",
    "dist",
    "doc",
    "node_modules",
    "test",
    "karma.conf.ts"
  ],
  "files" : [
    "resource.d.ts"
  ]
}
